<style>
body{
    margin:0;
    height:100vh;
    overflow:hidden;
    background: linear-gradient(135deg, #ff9a9e, #fad0c4);
    display:flex;
    justify-content:center;
    align-items:center;
    font-family: cursive;
}

h1{
    color:white;
    font-size:40px;
    text-align:center;
    font-style: italic;
    text-shadow: 2px 2px 10px rgba(0,0,0,0.3);
    animation: latido 1.5s infinite;
}

@keyframes latido{
    0%{transform: scale(1);}
    50%{transform: scale(1.1);}
    100%{transform: scale(1);}
}

.corazon{
    position:absolute;
    color:red;
    font-size:20px;
    animation: flotar 5s linear infinite;
}

@keyframes flotar{
    0%{
        transform: translateY(100vh);
        opacity:1;
    }
    100%{
        transform: translateY(-10vh);
        opacity:0;
    }
}
</style>
